<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/base_15"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/base_4"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            >

            <View
                android:id="@+id/view_line_middle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_1"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="@dimen/base_40"
                android:layout_height="@dimen/base_40"
                android:src="@mipmap/ic_launcher"
                android:layout_above="@id/view_line_middle"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_middle"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/base_4"
                android:text="name_name"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_type"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_q_a_press"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>